<h1>Task Assignees</h1>

<fieldset>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @team_members.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= button_to 'Remove from team', :action => :remove_task_assignee, :person_id => person.id, :remote => true %></td>
     </tr>
<% end %>
</table>
