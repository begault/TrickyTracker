<table>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Description</th>
    <th>Tmp achievement date</th>
    <th>Effective achievement date</th>
    <th>Priority</th>
    <th>Stopover</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.project_id %></td>
    <td><%= task.description %></td>
    <td><%= task.tmp_achievement_date %></td>
    <td><%= task.effective_achievement_date %></td>
    <td><%= task.priority_id %></td>
    <td><%= task.stopover_id %></td>
    <td><%= task.author %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

