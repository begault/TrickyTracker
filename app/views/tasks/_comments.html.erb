<%= render :partial => "comments/form" %>
<% if @comments %>
<table class="list_layout">
	<caption><h1>Comments</h1></caption>
<% @comments.each do |com| %>
	<thead>
  		<tr>
  			<th><%= com.author.name %> / <%= com.created_at.to_time %></th>
  		</tr>
	</thead>  		
	<tbody>
		<tr>
			<th><%= com.description %></th>
		</tr>	
	</tbody>	

<% end %>

</table>
<% end %>
