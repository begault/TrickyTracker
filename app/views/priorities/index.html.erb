<%= render :partial => "application/admin_nav" %>

<div class="admin_content">


<h1>Priorities</h1>

<table class="list_layout">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @priorities.each do |priority| %>
  <tr>
    <td><%= priority.name %></td>
    <td><%= priority.description %></td>
    <td><%= link_to 'Show', priority %></td>
    <td><%= link_to 'Edit', edit_priority_path(priority) %></td>
    <td><%= link_to 'Destroy', priority, confirm: 'Are you sure?', method: :delete %></td>
