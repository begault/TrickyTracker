<!DOCTYPE html>
<html>
<head>
  <title>Tracker</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body class="toto">
	<%= link_to "Home", root_url %> - 
	
	<% if @user %>
		<%=h link_to "Edit Account", edit_person_path('account') %> -
		<%=h link_to "Projects", projects_path %> -
		<%=h link_to "Priorities", priorities_path %> - 
		<%=h link_to "Stopovers", stopovers_path %> -
		<%=h link_to"Roles", new_role_path %> - 
		<%=h link_to "People", people_path %> - 
		<%=h link_to "Your tasks", :controller => "tasks", :action => "your_tasks", :user_id => @user.id %> - 
	    <%=h link_to "Logout", @application_session, :method => :delete %> - 
	    
	    <%=h " User: #{@user.name} - IP Address: #{@application_session.ip_address}" %>
	    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
	    
	    <%= render :partial => "layouts/path"%>
	    
	<% else %>
	    <%= link_to "Login", new_session_path %>	 
	<% end %>
	
	  <%= "- Message: #{flash[:notice]}" if flash[:notice] %>
	  
	  <hr />
	  
	  Tasks : <%=h @user %>
	  
	<%= yield %>

</body>
</html>
