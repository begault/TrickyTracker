<!DOCTYPE html>
<html>
<head>
  <title>Tracker</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<%= link_to "Home", root_url %> - 
	
	<% if @user %>
		<%= link_to "Edit Account", edit_person_path('account') %> -
		<%= link_to "Projects", projects_path %> -
		<%= link_to "Priorities", priorities_path %> - 
		<%= link_to "Stopovers", stopovers_path %> -
		<%= link_to"Roles", new_role_path %> - 
		<%= link_to "People", people_path %> - 
	    <%= link_to "Logout", @application_session, :method => :delete %> 
	    
	    <%=h " - User: #{@user.name} - IP Address: #{@application_session.ip_address}" %>
	    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%=h "Path: " %> <%= link_to @path%>
	<% else %>
	    <%= link_to "Login", new_session_path %>	 
	<% end %>
	
	  <%= "- Message: #{flash[:notice]}" if flash[:notice] %>
	  
	  <hr />
	  
	<%= yield %>

</body>
</html>
