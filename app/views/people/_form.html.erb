<h1> Edit Your Account </h1>
<%= form_for @person, :html => { :multipart => true }  do |f| %>
  
  <p class="double">
  <label for="person_name">Name:</label>
  <%= f.text_field :name %>
  </p>
  <p class="double">
  <label for="person_password">Password:</label>
  <%= f.password_field :password %>
  </p>
  <p class="double">
  <label for="person_password_confirmation">Password Confirmation:</label>
  <%= f.password_field :password_confirmation %>
  </p>
  <p class="double">
  <label for="person_email_address">Email address:</label>
  <%= f.text_field :email_address %>
  </p>
  <p class="double">
  <label for="person_role">Role:</label>
  <%= collection_select :roles_people, :role_id, @roles, :id, :name %>
  </p>

	<p class="simple">
  <%= submit_tag "Submit" %>
  </p>

<% end %>

